<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_title"
        android:background="#A53A2A"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_play"
        android:backgroundTint="#D2691E"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <!--<ImageView
            android:id="@+id/question_imageview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:src="@drawable/question"/>-->
        <ImageView
            android:id="@+id/first_dice_imageview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:src="@drawable/one"/>
        <ImageView
            android:id="@+id/second_dice_imageview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:src="@drawable/two"/>
        <ImageView
            android:id="@+id/third_dice_imageview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:src="@drawable/three"/>
        <ImageView
            android:id="@+id/fourth_dice_imageview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:src="@drawable/four"/>
        <ImageView
            android:id="@+id/fifth_dice_imageview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:src="@drawable/five"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dice_result"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/dice_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_result"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/game_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_reset"
        android:backgroundTint="#D2691E"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"/>

</LinearLayout>